[environment] ;;Различные настройки для погоды
sun_dir_mode = 1					;; Режим движения солнца. 0 - движковый ход, 1 - с конфигов погоды, 2 - с общего конфига движка
winter_mode = false					;; Зимний режим (влияет на циклы и эффекты)
weather_dof = false					;; Использовать параметры DoF из погоды
lowland_fog_from_weather = false	;; Использовать параметры низинного тумана из погоды
weather_color_grading = true		;; Влияние погоды на цветокоррекцию
wind_volume_koef = 16.5				;; Коэффицент общей громкости звука ветра
wind_influence_koef = 2.5			;; Коэффицент влияния ветра на колыхание травы и деревьев. Значение 0.0 отключает эффект.
moon_phases_mode = 8days			;; Режим лунных фаз (off|8days|28days)
fog_infl_volumetric_light = true	;; Влияние интенсивности тумана на интенсивность объёмного света

